@model List<SSGeek.Models.Product>
@{
    ViewBag.Title = "Index";
}


<section class="centeredPanel">
    <h2>Solar System Geek Gift Shop</h2>
    @foreach (var product in Model)
    {
        <div class="shoppingcart">
            <div class="formcartdiv">
                <form class="shoppingcart" action="@Url.Action("ItemPage")" method="get">
                    <input class="w3-image" type="image" src="~/Content/img/@product.ImageName" value="@product.ProductId" name="id" />
                </form>
            </div>
            <div class="containercartindex" style="display:inline-block">
                <div class="subcontainerindex">
                    <p class="shopinfoname">@product.Name</p>
                    <p class="shopinfo" style="color:cornflowerblue">@product.Price.ToString("C")</p>
                </div>
            </div>
        </div>
    }
</section>